<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ucr.paracontar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_appicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_appicon_round"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/Theme.ParaContar">
        <activity
            android:name="ac.ucr.paracontar.JuegoActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Juego"/>
        <activity
            android:name="ac.ucr.paracontar.submenu.CreditosActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name="ac.ucr.paracontar.submenu.AyudaActivity"
            android:screenOrientation="landscape"
            android:exported="true" />
        <activity
            android:name="ac.ucr.paracontar.submenu.AclaracionActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name="ac.ucr.paracontar.MenuActivity"
            android:exported="true"
            android:theme="@style/Juego"
            android:screenOrientation="landscape"/>
        <activity
            android:name="ac.ucr.paracontar.SplashActivity"
            android:exported="true"
            android:theme="@style/Juego"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>